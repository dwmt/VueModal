{
  "name": "@dwmt/modalis",
  "version": "0.1.5",
  "description": "A very powerful modal system for Vue",
  "main": "dist/Modalis.ssr.js",
  "browser": "dist/Modalis.esm.js",
  "module": "dist/Modalis.esm.js",
  "unpkg": "dist/Modalis.min.js",
  "files": [
    "dist/*",
    "src/**/*.vue"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dwmt/modalis.git"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "build": "cross-env NODE_ENV=production rollup --config build/rollup.config.js",
    "build:ssr": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format cjs",
    "build:es": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format es",
		"build:unpkg": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --format iife",
		"watch": "cross-env NODE_ENV=production rollup --config build/rollup.config.js --watch",
    "test": "cross-env NODE_ENV=test nyc --reporter=lcov --reporter=text mochapack --webpack-config test/webpack.config.js --require test/setup.js test/**/*.spec.js"
  },
  "keywords": [
    "modal",
    "vue",
    "component",
    "system",
    "dwmt"
  ],
  "contributors": [
    {
      "name": "Lajos Kovács",
      "email": "lajoskvcs@icloud.com",
      "url": "https://lajoskvcs.com"
    },
    {
      "name": "Gergely Szabó",
      "email": "gergely0116@gmail.com",
      "url": "https://github.com/Baxi0116"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dwmt/modalis/issues"
  },
  "homepage": "https://github.com/dwmt/modalis#readme",
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/plugin-syntax-dynamic-import": "^7.8.3",
    "@babel/preset-env": "^7.9.0",
    "@babel/preset-flow": "^7.8.3",
    "@vue/test-utils": "^1.0.0-beta.31",
    "@rollup/plugin-alias": "^2.2.0",
    "@rollup/plugin-commonjs": "^11.1.0",
    "@rollup/plugin-replace": "^2.3.2",
    "@vue/cli-plugin-babel": "^4.3.1",
    "@vue/cli-service": "^4.3.1",
    "cross-env": "^7.0.2",
    "minimist": "^1.2.5",
    "rollup": "^2.7.3",
    "rollup-plugin-terser": "^5.3.0",
    "rollup-plugin-vue": "^5.1.6",
    "babel-loader": "^8.0.6",
    "babel-plugin-istanbul": "^6.0.0",
    "chai": "^4.2.0",
    "css-loader": "^3.4.2",
    "jsdom": "^16.2.1",
    "jsdom-global": "^3.0.2",
    "mini-css-extract-plugin": "^0.9.0",
    "nyc": "^15.0.0",
    "pug": "^2.0.4",
    "stylus": "^0.54.7",
    "tailwindcss": "^1.2.0",
    "vue-loader": "^15.9.0",
    "vue-template-compiler": "^2.6.11",
    "webpack": "^4.41.6",
    "webpack-cli": "^3.3.11",
    "webpack-node-externals": "^1.7.2",
    "@rollup/plugin-babel": "^5.0.4"
  },
  "peerDependencies": {
    "vue": "^2.6.11"
  },
  "nyc": {
    "include": [
      "src/**/*.(js|vue)"
    ],
    "instrument": false,
    "sourceMap": false
  }
}
